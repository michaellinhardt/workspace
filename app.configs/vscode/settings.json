{
	"editor.fontSize": 14,
	"workbench.startupEditor": "none",
	"extensions.ignoreRecommendations": true,
	"[javascript]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"[markdown]": {
		"diffEditor.ignoreTrimWhitespace": true,
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true,
		"editor.codeActionsOnSave": {
			"source.fixAll.markdownlint": "explicit"
		}
	},
	"github.copilot.nextEditSuggestions.enabled": true,
	"editor.formatOnSave": true,
	"notebook.formatOnSave.enabled": true,
	"debug.console.fontSize": 16,
	"terminal.integrated.fontSize": 18,
	"kilo-code.allowedCommands": [
		"git log",
		"git diff",
		"git show",
		"npm run",
		"python3 -m http.server 8000",
		"python3",
		"npm init",
		"npm",
		"npm init -y",
		"mkdir",
		"npx",
		"git init",
		"git clone",
		"npm install",
		"node",
		"npm test",
		"grep",
		"tail",
		"ls",
		"test",
		"echo",
		"head",
		"cat",
		"cp",
		"npm start"
	],
	"kilo-code.deniedCommands": [],
	"workbench.editor.empty.hint": "hidden",
	"editor.accessibilitySupport": "on",
	"editor.autoIndentOnPaste": true,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"eslint.codeActionsOnSave.rules": null,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"python.defaultInterpreterPath": "/opt/homebrew/bin/python3.13",
	"workbench.secondarySideBar.defaultVisibility": "hidden",
	"accessibility.signalOptions.volume": 5,
	"git.confirmSync": false,
	"gitlens.ai.model": "vscode",
	"gitlens.ai.vscode.model": "copilot:gpt-4.1",
	"window.title": "${folderName}",
	"explorer.confirmDragAndDrop": false,
	"claudeCode.allowDangerouslySkipPermissions": true,
	"claudeCode.initialPermissionMode": "bypassPermissions",
	"markdown.preview.linkify": false,
	"workbench.iconTheme": "material-icon-theme",
	"material-icon-theme.folders.color": "#42a5f5",
	"workbench.settings.applyToAllProfiles": [],
	"material-icon-theme.folders.associations": { // https://github.com/material-extensions/vscode-material-icon-theme/tree/main/src/core/icons
		"Excalidraw": "robot",
		"10. AI": "robot",
		"99. WUTHERING": "console",
		"99. GENSHIN": "console",
		"31. DEV": "github",
		"grimoire-obsidian": "obsidian",
		"claude": "claude",
		".claude": "claude",
		"11. CLAUDE-CODE": "claude",
		"claude-agents": "claude",
		"claude-commands": "claude",
		"claude-links": "claude",
		"claude-templates": "claude",
		"20. KNOWLEDGE": "bibliography",
		"Excalidraw": "config",
	}
}